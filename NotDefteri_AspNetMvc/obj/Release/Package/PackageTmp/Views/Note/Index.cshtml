@using NotDefteri_AspNetMvc
@model IEnumerable<NotDefteri.Entities.ND_Note>

@{
    ViewBag.Title = "Liste";
}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2>Notlar</h2>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <p>
            @Bootstrap.LinkButton("/Note/Create/", "success", "btn-xs", "Ekle", "plus", "Kategori Ekle")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Category.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Text)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsDraft)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LikeCount)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDraft)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LikeCount)
                    </td>

                    <td style="width:130px;">
                        @Bootstrap.LinkButton("/Note/Edit/" + @item.Id, "warning", "btn-xs", "Düzenle", "edit", string.Empty)
                        @Bootstrap.LinkButton("/Note/Details/" + @item.Id, "info", "btn-xs", "Detay", "search", string.Empty)
                        <button class="btn btn-success btn-xs" type="button" data-toggle="modal" data-target="#model_comment" data-note-id="@item.Id">
                            <span class="glyphicon glyphicon-comment"></span>
                        </button>
                        @Bootstrap.LinkButton("/Note/Delete/" + @item.Id, "danger", "btn-xs", "Sil", "trash", string.Empty)
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

@Bootstrap.ModalPopup("model_comment", "Yorumlar", true)

<script src="~/scripts/comment.js"></script>